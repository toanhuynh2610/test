<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">movie_form.movie_form_data_source</item>
            <item name="deps" xsi:type="string">movie_form.movie_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Movie Infomation</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">movie_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Magenest\Movie\Block\Adminhtml\Movie\Save</item>
        </item>
    </argument>
    <dataSource name="movie_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Movie\Model\ResourceModel\Movie\DataProvider</argument>
            <argument name="name" xsi:type="string">movie_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">name</argument>
            <argument name="requestFieldName" xsi:type="string">name</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="movie/movie/save"/>
        </settings>
    </dataSource>
    <fieldset name="add_movie">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Add new movie</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="movie_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Movie Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                    <item name="dataScope" xsi:type="string">movie_name</item>
                </item>
            </argument>
        </field>
        <field name="movie_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Movie Description</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                    <item name="dataScope" xsi:type="string">movie_description</item>
                </item>
            </argument>
        </field>
        <field name="movie_rating">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Movie Rating</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                    <item name="dataScope" xsi:type="string">movie_rating</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>

                </item>
            </argument>
        </field>
        <field name="movie_director">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Director ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie</item>
                    <item name="dataScope" xsi:type="string">movie_diector</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>
                </item>

            </argument>
        </field>
    </fieldset>
</form>